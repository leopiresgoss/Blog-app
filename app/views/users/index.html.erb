<section id="users-index">
  <h2>Here is a list of users</h2>
  <ul>
    <% @users.each do |user| %>
      <li>
      <%= link_to(user) do %>
          <img src=<%= user.photo %> alt="" class="user-avatar sm">
          <div class="details">
            <h3><%= user.name %></h3>
            <p>Number of posts: <%= user.posts_counter %></p>
          </div>
      <% end %>
    <% end %>
  </ul>
</section>